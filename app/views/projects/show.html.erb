<% @title = "Projects - Ticketee" %>
<div class="page-header">
	<h1> <%= @project.name %> </h1>

	<ul class="actions">
		<li><%= link_to fa_icon("pencil") + " Edit Project", edit_project_path(@project), class: "btn btn-primary" %></li>
		<li><%= link_to fa_icon("trash") + " Delete Project", project_path(@project), method: :delete,
	  		data: {confirm: "Are you sure you want to delete this project?" },
	  		class: "btn btn-danger"  %></li>
	</ul>
</div>
<p> <%= @project.description %> </p>

<header>
	<h2>Tickets</h2>

	<ul class="actions">
	  <li><%= link_to "New Ticket", new_project_ticket_path(@project),
	  class: "new" %></li>
	</ul>
</header>